<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="autoResultCategory"
            type="com.leisurely.people.enjoyd.model.search.AutoResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/auto_result_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#212224"
            android:lineSpacingExtra="6sp"
            android:paddingStart="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@{autoResultCategory.title}"
            android:textColor="#a1a1a1"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="프로그램" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1b1c1d"
            app:layout_constraintTop_toBottomOf="@+id/auto_result_category_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
