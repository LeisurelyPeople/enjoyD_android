<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.leisurely.people.enjoyd.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".ui.search.SearchActivity">

        <!-- 헤더 레이아웃 (검색바) -->
        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_search_header"
            tool:vm="@{vm}" />

        <!-- 카테고리별로 보여주는 리스트 레이아웃 (프로그램 / 배우) -->
        <ViewStub
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/layout_search_category"
            tool:vm="@{vm}" />

        <!-- 처음 들어갈 시 보여주는 추천 리스트 레이아웃 -->
        <ViewStub
            android:id="@+id/layout_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/layout_search_default"
            tool:vm="@{vm}" />

        <!-- 최근 검색어 리스트 레이아웃 -->
        <ViewStub
            android:id="@+id/layout_recent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/layout_search_recent"
            tool:vm="@{vm}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
