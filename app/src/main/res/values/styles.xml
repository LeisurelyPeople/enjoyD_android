<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_effect_background</item>
        <item name="android:statusBarColor">@color/color_black</item>
        <item name="android:datePickerStyle">@style/UserBirthDayDatePickerStyle</item>
        <item name="android:windowBackground">@color/color_grey_400</item>
        <item name="android:navigationBarColor">@color/color_black</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">16dp</item>
        <item name="contentInsetEnd">16dp</item>
        <item name="android:background">@color/color_grey_400</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="UserInfoInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/color_edit_text_hint</item>
        <item name="android:textColor">@color/color_grey_0</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="UserInfoInputRadioBtnStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textColor">@drawable/selector_text_color_in_user_info_input</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@drawable/selector_radio_group_in_user_info_input</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignUpButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/selctor_button_in_sign_up</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color_in_sign_up</item>
    </style>

    <style name="EvaluationCompleteButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/selector_button_in_summary_evalution</item>
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color_in_summary_evalution</item>
    </style>

    <style name="UserBirthDayDatePickerStyle" parent="android:Widget.Holo.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>
